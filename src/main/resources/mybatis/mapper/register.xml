<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.justvote.dao.IRegisterDao">
	<!-- 회원가입 -->
	<insert id="registerDao">
		insert into user(userName,sex,age,major,grade,nickName,userID,userPass)
		values
		(#{param1},#{param2},#{param3},#{param4},#{param5},#{param6},#{param7},#{param8})
 	</insert>

	<!-- 로그인 -->
	<select id="loginDao" resultType="String">
		select userID,userPass from user where userID = #{_userID} and userPass =
		#{_userPass}

	</select>
	<select id="check" resultType="com.justvote.dto.RegisterDto"
		parameterType="String">
		select userID from user where userID = #{userID}

	</select>
	
	<!-- 유저의 닉네임 가져오기 -->
	<select id="getUserNickNameDao" resultType="String">
		select nickName from user where userID = #{_userID}
	</select>
		
	<!-- 조회수 높은 순 가져오기 -->
	<select id="hitView" resultType="String">
		select * from test5 order by hit desc

	</select>

	<select id="contentDao"
		resultType="com.justvote.dto.RegisterDto">
		select content from test where id = 1

	</select>

</mapper>
