		commentNum desc

	</select> -->

	<insert id="writeDao">
		insert into comment(userID, voteID, nickName, commentContent) values 
		(#{_userID}, #{_voteID}, #{_nickName}, #{_commentContent})
	</insert>

	<delete id="deleteDao">
		delete from comment where commentID = #{_commentID}
	</delete>


<!-- content 페이지 불러올때 필요한 전체 comment 불러오는 DAO -->
	<select id="listDao2" resultType="com.justvote.dto.CommentDto">
		select * from comment where voteID = #{_voteID}
	</select>

	<delete id="delete">
		delete from comment where voteID = #{_voteID}
	</delete>
</mapper>